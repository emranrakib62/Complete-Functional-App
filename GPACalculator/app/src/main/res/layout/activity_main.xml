<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ScrollView

        android:background="@drawable/bac_design"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                android:padding="10dp"
                android:background="@drawable/head_design"
                android:layout_marginTop="10dp"
                android:textColor="#0F0AAB"
                android:textSize="35sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="GPA Calculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText

                android:padding="10dp"
                android:background="#FFEB3B"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/editTextCredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Your Course Credit"
                android:textSize="30sp"
                android:textColor="#FA189FDE"
                android:gravity="center"/>

            <EditText
               android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:background="#FFEB3B"

                android:id="@+id/editTextGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:hint="Your Course Grade"
                android:textColor="#FA189FDE"
                android:textSize="30sp" />

            <Button

    android:textSize="25dp"
    android:id="@+id/buttonAdd"
    android:textColor="#ACE21F"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="35dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add Course"/>


            <Button
                android:background="@drawable/button_design"
                android:textSize="25dp"
                android:id="@+id/buttonCalculate"
                android:textColor="#ACE21F"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate SGPA"/>




            <TextView
                android:id="@+id/textViewResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:padding="20sp"
                android:text="Here Your SGPA"
                android:textSize="35sp"
                android:textStyle="bold" />
            <Button
                android:layout_margin="20dp"
                android:background="@drawable/button_design"
                android:id="@+id/buttonReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:text="CLEAR"
                android:textSize="25sp"
                android:textStyle="bold"
                />


        </LinearLayout>


    </ScrollView>


</LinearLayout>