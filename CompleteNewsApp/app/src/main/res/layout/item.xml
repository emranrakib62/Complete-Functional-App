<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_shade"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">




    <ImageView
        android:id="@+id/imageview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/is" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cat"
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="#FFFF8D" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="রোবোকেট সফটওয়্যার"
            android:maxLines="2"
            android:textSize="15dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textColor="#000000"
            android:background="#C9FFD180" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বড় পরিসরে বাণিজ্যিক প্রচারণা চালানোর সুযোগ"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold" />
    </LinearLayout>

        </androidx.cardview.widget.CardView>
</LinearLayout>
</LinearLayout>