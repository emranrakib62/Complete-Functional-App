<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    android:layout_margin="5dp"
    android:background="@drawable/jjj">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/nn" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="283dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_two_colored"
        android:gravity="center"
        android:text="بِسْمِ ٱللَّٰهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvdisplay"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:padding="20sp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp" />

    <!-- Repeatable Neumorph Card Buttons -->
    <soup.neumorphism.NeumorphCardView
        android:id="@+id/badd"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="pressed"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp"
        app:neumorph_shadowColorDark="@color/pink"
        app:neumorph_shadowColorLight="@color/purple_700">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="আলহামদুলিল্লাহ"
            android:textSize="23sp"
            android:textColor="@android:color/black" />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/baddla"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="pressed"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp"
        app:neumorph_shadowColorDark="@color/pink"
        app:neumorph_shadowColorLight="@color/purple_700">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="লা ইলাহা ইল্লাল্লাহ"
            android:textSize="23sp"
            android:textColor="@android:color/black" />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/baddsu"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="pressed"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp"
        app:neumorph_shadowColorDark="@color/pink"
        app:neumorph_shadowColorLight="@color/purple_700">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="সুবাহান আল্লাহ"
            android:textSize="23sp"
            android:textColor="@android:color/black" />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/baddallah"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="pressed"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp"
        app:neumorph_shadowColorDark="@color/pink"
        app:neumorph_shadowColorLight="@color/purple_700">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="আল্লাহু আকবার"
            android:textSize="23sp"
            android:textColor="@android:color/black" />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/bsub"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="pressed"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp"
        app:neumorph_shadowColorDark="@color/pink"
        app:neumorph_shadowColorLight="@color/purple_700">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="কমান"
            android:textSize="23sp"
            android:textColor="@android:color/black" />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/breset"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="16dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="pressed"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp"
        app:neumorph_shadowColorDark="@color/pink"
        app:neumorph_shadowColorLight="@color/purple_700">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:textSize="23sp"
            android:textColor="@android:color/black" />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/bmute"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeType="pressed"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp"
        app:neumorph_shadowColorDark="@color/pink"
        app:neumorph_shadowColorLight="@color/purple_700">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MUTE SOUND"
            android:textSize="23sp"
            android:textColor="@android:color/black" />
    </soup.neumorphism.NeumorphCardView>

</LinearLayout>
